{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('registerStyle') }}
    {% endblock %}
{% block body %}

    <div class="register-form">
        {{ form_start(form) }}

        <div class="register-form__container">
            <div class="register-form__lastname">
                <div id="name-div">
                    <div id="lastname-div">
                        {{ form_label(form.lastName) }}
                        <br>
                        {{ form_widget(form.lastName) }}
                    </div>
                    <div id="firstname-div">
                        {{ form_label(form.firstName) }}
                        <br>
                        {{ form_widget(form.firstName) }}
                    </div>
                </div>
            </div>

            <div class="register-form__profession">
                {{ form_row(form.salutation) }}
            </div>

            <div class="register-form__profession">
                {{ form_label(form.professions) }}
                <br>
                {{ form_widget(form.professions) }}
            </div>

            <div class="register-form__contact">
                <div>
                    {{ form_label(form.phoneNumber) }}
                    <br>
                    {{ form_widget(form.phoneNumber) }}
                </div>
                <div>
                    {{ form_label(form.mail) }}
                    <br>
                    {{ form_widget(form.mail) }}
                </div>

            </div>

            <div class="register-form__password">
                <div>
                    {{ form_label(form.password.first) }}
                    <br>
                    {{ form_widget(form.password.first) }}
                </div>
                <div>
                    {{ form_label(form.password.second) }}
                    <br>
                    {{ form_widget(form.password.second) }}
                </div>

            </div>

            <div class="register-form__submit" style="text-align: left">
                {{ form_row(form.submit) }}
            </div>

        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
