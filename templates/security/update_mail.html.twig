{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('updateMailStyle') }}
{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="h-75">
            <div class="wrap justify-content-center">
                <div id="wrapper">
                    {{ form_start(form) }}
                    <div class="form-content">
                        {{ form_row(form.mail) }}
                        <br>
                        {{ form_row(form.password) }}
                        <br>
                        {{ form_row(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}