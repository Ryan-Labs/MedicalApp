{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block body %}
    <h1>Ad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HaveSecretariat</th>
                <th>HomeVisit</th>
                <th>Housing</th>
                <th>Appointments</th>
                <th>Software</th>
                <th>HouseKeeping</th>
                <th>Sector</th>
                <th>Content</th>
                <th>Address</th>
                <th>IsActive</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ ad.id }}</td>
                <td>{{ ad.haveSecretariat ? 'Yes' : 'No' }}</td>
                <td>{{ ad.homeVisit ? 'Yes' : 'No' }}</td>
                <td>{{ ad.housing ? 'Yes' : 'No' }}</td>
                <td>{{ ad.appointments }}</td>
                <td>{{ ad.software }}</td>
                <td>{{ ad.houseKeeping ? 'Yes' : 'No' }}</td>
                <td>{{ ad.sector }}</td>
                <td>{{ ad.content }}</td>
                <td>{{ ad.address }}</td>
                <td>{{ ad.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ ad.date ? ad.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ad_show', {'id': ad.id}) }}">show</a>
                    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ad_new') }}">Create new</a>
{% endblock %}
