{% extends 'base.html.twig' %}

{% block title %}My responses{% endblock %}

{% block body %}
    <h1>My responses</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Annonce</th>
            <th>Message</th>
            <th>Date</th>
            <th>Statut de l'annonce</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for response in responses %}
            <tr>
                <td>{{ response.ad.title }}</td>
                <td>{{ response.content }}</td>
                <td>{{ response.date|date("d/m/y") }}</td>
                <td>{{ response.ad.status }}</td>
                <td>{{ include('response/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
